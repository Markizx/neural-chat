# Environment
NODE_ENV=production
AWS_REGION=us-east-1

# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ECR Repository Names
IMAGE_REPO_NAME_API=smartchat-api
IMAGE_REPO_NAME_WEB=smartchat-web
IMAGE_TAG=latest

# Application URLs
API_URL=https://api.smartchat.ai
WEB_URL=https://smartchat.ai

# Database (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartchat?retryWrites=true&w=majority

# Redis (use ElastiCache for production)
REDIS_URL=redis://redis-cluster.abc123.cache.amazonaws.com:6379