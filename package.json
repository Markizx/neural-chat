{
  "name": "smartchat-ai-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:api": "lerna run build --scope=@smartchat/api",
    "build:web": "lerna run build --scope=@smartchat/web",
    "start:api": "lerna run start --scope=@smartchat/api",
    "start:web": "lerna run start --scope=@smartchat/web",
    "dev": "lerna run dev --parallel",
    "clean": "lerna clean -y && rm -rf node_modules",
    "test": "lerna run test",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}